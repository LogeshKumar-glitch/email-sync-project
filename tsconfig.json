{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "backend/dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [
    "backend/src/**/*"
  ]
}